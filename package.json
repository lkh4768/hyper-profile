{
  "name": "hyper-profile",
  "version": "0.0.1",
  "description": "Profile for hyper",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src",
    "lint:report": "npm run lint -- -f json -o ./reports/lint/report.json",
    "test": "NODE_ENV=test jest",
    "test:report": "NODE_ENV=test npm run test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lkh4768/hyper-profile.git"
  },
  "keywords": ["hyper-plugin"],
  "author": "kihyeon lee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lkh4768/hyper-profile/issues"
  },
  "homepage": "https://github.com/lkh4768/hyper-profile#readme",
  "dependencies": {
    "eslint": "^6.1.0",
    "jest": "^24.8.0",
    "jest-sonar-reporter": "^2.0.0"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "coverageReporters": ["lcov"],
    "coverageDirectory": "reports/unittest/coverage"
  },
  "jestSonar": {
    "reportPath": "reports/unittest",
    "reportFile": "report.xml",
    "indent": 4
  }
}
